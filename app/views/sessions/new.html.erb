<%= form_tag session_create_path do |f| %>
  <p>
    <%= text_field_tag :username, nil, :placeholder => "Username", :class => "input-xlarge" %>
  </p>

  <p>
    <%= password_field_tag :password, nil, :placeholder => "Password", :class => "input-xlarge" %>
  </p>

  <%= submit_tag :submit, :class => "btn-primary login-btn" %>
<% end %>